---
const { title, url, author, pubDate, description, tags } = Astro.props;
const dateOptions: object = {
  year: "numeric",
  month: "long",
  day: "numeric"
};
const formattedPubDate = new Date(pubDate).toLocaleDateString("en-GB", dateOptions);
---
<div class="blog-card">
  <a href={url}>
    <div class="blog-card__content">
      <h2 class="blog-card__title">{title}</h2>
      {author && (
        <div class="blog-card__author">
          <span>By {author}<br>Created on {formattedPubDate}</span>
        </div>
      )}
      {description && <p class="blog-card__excerpt">{description}</p>}
      {tags && tags.length > 0 && (
        <div class="blog-card__tags">
          {tags.map(tag => (
            <span class="blog-card__tag">#{tag}</span>
          ))}
        </div>
      )}
    </div>
  </a>
</div>
